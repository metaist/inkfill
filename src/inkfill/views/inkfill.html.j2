<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{config.title}}</title>

  <link rel="stylesheet/less" type="text/css" href="/static/index.less" />
  {% block styles %}{% endblock %}
  {% block paged %}
  <style>
    @media print {
      @page {
        size: letter;

        @bottom-center {
          content: "- " counter(page) " -";
        }
      }
    }
  </style>
  {% endblock %}
  <script src="https://cdn.jsdelivr.net/npm/less"></script>
</head>

<body>
  {% block content %}{% endblock %}
  {% block scripts %}{% endblock %}
  <script>
    [].slice.apply(document.querySelectorAll("a.ref")).forEach((link) => {
      let ref = document.querySelector(link.getAttribute("href"));
      let attr = link.getAttribute("data-attr") || "data-cite";
      link.innerText = ref.getAttribute(attr);
    });
  </script>
  <script src="https://unpkg.com/pagedjs/dist/paged.polyfill.js"></script>
</body>

</html>
